# Mise Configuration managed by chezmoi
# This file defines the tools to be installed by mise (formerly rtx).
# Chezmoi will process this template and generate ~/.config/mise/config.toml

[tools]
neovim   = "latest"  # Modern Vim-based text editor
node     = "lts"     # Node.js Long Term Support version
pixi     = "latest"  # Package management for conda environments
starship = "latest"  # Cross-shell prompt
usage    = "latest"  # CLI usage specification tool
fastfetch = "latest" # System information tool
opencode = "latest"